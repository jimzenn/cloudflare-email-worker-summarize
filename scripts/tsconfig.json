{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDir": "../",
        "baseUrl": "../",
        "lib": ["ES2017", "DOM"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "../src/**/*",
        "./**/*"
    ]
}